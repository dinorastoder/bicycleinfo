html
  head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= id + " - Sykkelkjokkenet"

    link(rel="icon", type="image/png", href="images/favicon.png")
    link(href="//fonts.googleapis.com/css?family=Raleway:400,300,600", rel="stylesheet", type="text/css")

    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/skeleton.css')

  body
    div(class="container")
      div(class="row", style="margin-top: 5%")
        div(class="three columns" style="margin-bottom: 5%")
          img(src="/images/sykkelkjokkenet-logo.png", class="five u-max-full-width")
        div(class="nine columns", style="text-align: center;")
          h1= "Bicycle Info"
      div(class="row" style="text-align: center; border: 1px black solid")
        div(class="column")
          h2= id
      div(class="row")  
        div(class="column")
          a(href="/bicycle/"+id)= "< Back to overview"
      div(class="row")
        div(class="eleven columns")
          label(for="images", style="margin-top: 15px")="Images"
          div
            img(src=images[0].url, style="width: 100%")
      div(class="row")
        div(class="column")
          table(class="u-full-width")
            tr
              td(onclick="javascript:location='"+id+"/edit/images'")
                each image in images
                  a(href="/bicycle/"+id+"/images")
                    img(src=image.url, style="width: 20%")
              td
                a(href=id+"/edit/images")
                  img(src="https://img.icons8.com/material-two-tone/24/000000/pencil.png", alt=("Edit info"))
      div(class="row")
        div(class="column")
          p(style="font-size: 60%;font-style: italic;")= "Updated "+moment(updated).format('DD.MMM.YYYY') + " / Added "+moment(added).format('DD.MMM.YYYY')
      